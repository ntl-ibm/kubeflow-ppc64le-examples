  <script>
    var dotList = document.getElementById("slideshow-dots")
    var numSlides = document.getElementsByClassName("mySlides").length
    for (let dot_for_slide = 0; i < numSlides; i++) {
      span = document.createElement('span');
      span.setAttribute("class", "slideshow-dot");
      span.setAttribute("onclick", `click_dot(${dot_for_slide})`)
      dotList.appendChild(span)
    }
  </script>

  <!-- https://www.w3schools.com/howto/tryit.asp?filename=tryhow_js_slideshow_auto -->
  <script>
    var curSlide = 0;
    var numSlides = document.getElementsByClassName("mySlides").length
    var SlideShowInterval = null;

    click_dot(0)

    function showSlide(slide_num) {
      let i

      var slides = document.getElementsByClassName("mySlides");
      var dots = document.getElementsByClassName("slideshow-dot");

      slides[slide_num].classList.add('mySlides-active')
      dots[slide_num].classList.add('slideshow-dot-active')
      curSlide = slide_num

      for (i = 0; i < slides.length; i++)  {
        if ((i != curSlide) && slides[i].classList.contains('mySlides-active')) {
          slides[i].classList.remove('mySlides-active')
        }
      }


      for (i = 0; i < dots.length; i++) {
        if ((i != curSlide) && dots[i].classList.contains('slideshow-dot-active')) {
          dots[i].classList.remove('slideshow-dot-active')
        }
      }
      

    }


    function showSlides() {
      
      SlideShowInterval = setInterval(function() {
                                    showSlide((curSlide + 1) % numSlides);
                                 },
                                 10000
                                 );
    }

    function click_dot(dot_num) {
      if (SlideShowInterval) {
        clearInterval(SlideShowInterval)
        SlideShowInterval = null
        showSlide(dot_num)
        return
      }

      if (curSlide == dot_num) {
        showSlide(dot_num)
        showSlides()
        return
      } else {
        showSlide(dot_num)
      }
    }
  </script>
