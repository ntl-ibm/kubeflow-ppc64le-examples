  <script>
    var curSlide = 0;
    var SlideShowInterval = null;

    showSlides();

    function showSlide(slide_num) {
      let i

      var slides = document.getElementsByClassName("mySlides");
      var dots = document.getElementsByClassName("slideshow-dot");
  
      for (i = 0; i < slides.length; i++)  {
        if (slides[i].classList.contains('mySlides-active')) {
          slides[i].classList.remove('mySlides-active')
        }
      }


      for (i = 0; i < dots.length; i++) {
        if (dots[i].classList.contains('slideshow-dot-active')) {
          dots[i].classList.remove('slideshow-dot-active')
        }
      }

      slides[slide_num].classList.add('mySlides-active')
      dots[slide_num].classList.add('slideshow-dot-active')
      curSlide = slide_num
      

    }


